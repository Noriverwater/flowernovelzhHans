translate chinese ecg6_label_e65f87d6:

    # voice "voices/hd82.ogg"
    # 현지 "“지금으로선요.”"
    voice "voices/hd82.ogg"
    현지 "“目前还没有。”"

# game/chapter4.rpy:959
translate chinese ecg6_label_a5232b60:

    # voice ""
